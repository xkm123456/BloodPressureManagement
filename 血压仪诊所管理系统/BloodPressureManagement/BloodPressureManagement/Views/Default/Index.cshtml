    <script>
        layui.use('layer', function () {
            var layer = layui.layer;
            layer.ready(function () {
                $.ajax({
                    url: '/Default/Check_Admin',
                    success: function (result) {
                        if (result == "冻结") {
                            $("#side-nav").hide();
                            location.href = '/Login/Index';
                        }
                        else if (result == "分店管理员") {
                            $("#Pharmacy").hide();
                            $("#Acount").hide();
                        }
                        else if (result == "总店管理员") {
                            $("#Pharmacy_Head").hide();
                        }
                        else if (result == "超级管理员") {
                            $("#MySelf").hide();
                        }
                    }
                })
            })
        });
        function Exit() {

            $.ajax({
                url: '/Default/Exit'
